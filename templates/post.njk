{% extends 'base.njk' %}

{% block head %}
  <link href="/css/code-theme.css" rel="stylesheet">
{% endblock %}

{% block nav %}
  <a href="/" class="nav-link icon-before" data-icon="arrow_back" title="Back" aria-label="Back"></a>
{% endblock nav %}

{% block content %}
  <div class="container">
    <article class="article">
      <header class="article-meta">
        <h1 class="article-title">{{ title }}</h1>
        <p class="article-date">
          {% if original %}
            Originally posted on <a href="{{ original.url }}">
              {{- original.site -}}
            </a> on
          {% else %}
            Posted on
          {% endif %}
          <time datetime="{{ date | date('iso') }}">
            {{ date | date('long') }}
          </time>
        </p>
      </header>
      <div class="article-content">
        {{ content | markdown | safe }}
      </div>
    </article>
  </div>
{% endblock content%}
